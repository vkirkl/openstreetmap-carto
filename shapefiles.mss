#necountries {
  [zoom >= 1][zoom < 4] {
    line-width: 0.2;
    [zoom >= 2] {
      line-width: 0.3;
    }
    [zoom >= 3] {
      line-width: 0.4;
    }
    line-color: @admin-boundaries;
  }
}

#world {
  [zoom >= 0][zoom < 10] {
    polygon-fill: @land-color;
    polygon-opacity:1;
    polygon-simplify: 0.4;
    [zoom < 8] {
      line-color: darken(@water-color,20%);
      line-simplify: 0.4;
      line-width: 0.5;
      line-offset: 0.5;
    }
  }
}

#coast-poly {
  [zoom >= 10] {
    polygon-fill: @land-color;
    polygon-opacity:1;
  }
}
